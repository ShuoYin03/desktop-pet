{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["packages/engine/src/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["packages", "apps", "scripts"],
  "exclude": ["node_modules", "dist"]
}
